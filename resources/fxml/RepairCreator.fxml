<?xml version="1.0" encoding="UTF-8"?>

<?import edu.bsu.cs222.finalproject.ui.ItemSelector?>
<?import edu.bsu.cs222.finalproject.ui.UserSelector?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10" fx:controller="edu.bsu.cs222.finalproject.ui.RepairCreator" alignment="center">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <Label text="Add a new Repair"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <ItemSelector fx:id="itemField" fx:factory="instance"
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            GridPane.columnSpan="2" GridPane.rowSpan="1"/>
    <UserSelector fx:id="userField" fx:factory="instance"
            GridPane.columnIndex="0" GridPane.rowIndex="3"
             GridPane.columnSpan="2" GridPane.rowSpan="1"/>
    <Button onAction="#cancel" text="Cancel"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button onAction="#submit" text="Next"
            GridPane.columnIndex="1" GridPane.rowIndex="5"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
</GridPane>