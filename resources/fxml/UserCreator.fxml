<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10" fx:controller="edu.bsu.cs222.finalproject.ui.UserCreator" alignment="center">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <Label text="Create New User"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2" GridPane.rowSpan="1"/>
    <Label text="Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="Phone Number:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="Address:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="State:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="City:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="nameField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="phoneField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="addressField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="stateField"
               GridPane.columnIndex="1" GridPane.rowIndex="4"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="cityField"
               GridPane.columnIndex="1" GridPane.rowIndex="5"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button text="Submit" onAction="#submit"
            GridPane.columnIndex="0" GridPane.rowIndex="6"
            GridPane.columnSpan="2" GridPane.rowSpan="1"/>
</GridPane>