<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="edu.bsu.cs222.finalproject.ui.RepairPartEditor">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <Label text="Edit Repair Part" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.rowSpan="1" />

    <Label text="Quantity:" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="2" GridPane.rowSpan="1" />
    <Label text="Name:" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="3" GridPane.rowSpan="1" />
    <Label text="Price:" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="4" GridPane.rowSpan="1" />
    <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="2" GridPane.rowSpan="1" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="3" GridPane.rowSpan="1" />
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="4" GridPane.rowSpan="1" />
    <Button onAction="#exit" prefHeight="31.0" prefWidth="125.0" text="Back" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="5" GridPane.rowSpan="1" />
    <Button onAction="#updateRepairPart" prefHeight="31.0" prefWidth="125.0" text="Update" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="5" GridPane.rowSpan="1" />
    <Button fx:id="markAsBoughtButton" onAction="#markAsBought" text="Mark as Bought" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
    <Button fx:id="viewRepairButton" onAction="#viewRepair" prefHeight="31.0" prefWidth="126.0" text="View Repair" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
