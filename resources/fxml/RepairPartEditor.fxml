<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10" fx:controller="edu.bsu.cs222.finalproject.ui.RepairPartEditor" alignment="center">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <Label text="Edit Repair Part"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2" GridPane.rowSpan="1"/>

    <Label text="Quantity:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="Price:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="quantityField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="nameField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="priceField"
               GridPane.columnIndex="1" GridPane.rowIndex="4"
               GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button onAction="#exit" text="Back"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button onAction="#updateRepairPart" text="Update"
            GridPane.columnIndex="1" GridPane.rowIndex="5"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button fx:id="markAsBoughtButton" onAction="#markAsBought" text="Mark as Bought"
            GridPane.columnIndex="2" GridPane.rowIndex="5"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
</GridPane>