<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>

<?import edu.bsu.cs222.finalproject.ui.UserViewer?>
<?import javafx.scene.control.Button?>
<GridPane xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10" fx:controller="edu.bsu.cs222.finalproject.ui.PurchaseEditor" alignment="center">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <Label text="Edit Purchase"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2" GridPane.rowSpan="1"/>
    <UserViewer fx:id="userViewer" fx:factory="instance"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.columnSpan="2" GridPane.rowSpan="1"/>

    <Label text="Item Model:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="Item Serial Number:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="modelField"
           GridPane.columnIndex="1" GridPane.rowIndex="2"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <TextField fx:id="serialField"
           GridPane.columnIndex="1" GridPane.rowIndex="3"
           GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button onAction="#exit" text="Back"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button onAction="#updatePurchase" text="Update"
            GridPane.columnIndex="1" GridPane.rowIndex="4"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Button onAction="#deletePurchase" text="Delete"
            GridPane.columnIndex="2" GridPane.rowIndex="4"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
</GridPane>