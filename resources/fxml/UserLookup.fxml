<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="edu.bsu.cs222.finalproject.ui.UserLookup">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <Button onAction="#backToSelection" text="Back to Selection" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0" GridPane.rowSpan="1" />
    <Label text="Lookup Customer" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1" GridPane.rowSpan="1" />
    <UserSelector fx:id="userField" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.rowSpan="1" fx:factory="instance" />
    <TableView fx:id="dataTable" minWidth="400" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.rowSpan="1" />
    <Button onAction="#createNewPurchase" onKeyTyped="#createNewPurchase" text="Create New Purchase" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
    <Button onAction="#createNewRepair" text="Create New Repair" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
