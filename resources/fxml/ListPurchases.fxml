<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import edu.bsu.cs222.finalproject.ui.UserSelector?>
<?import javafx.scene.control.TableView?>

<GridPane xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10" fx:controller="edu.bsu.cs222.finalproject.ui.ListPurchases" alignment="center">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <Button text="Back to Selection" onAction="#backToSelection"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <Label text="List Purchases for User"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    <UserSelector fx:id="userField" fx:factory="instance"
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            GridPane.columnSpan="2" GridPane.rowSpan="1"/>
    <Label fx:id="errorLabel"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"/>
    <TableView fx:id="dataTable" minWidth="400"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="2" GridPane.rowSpan="1"/>
    <Button onAction="#createNewPurchase" text="Create New"
            GridPane.columnIndex="0" GridPane.rowIndex="6"
            GridPane.columnSpan="2" GridPane.rowSpan="1"/>
</GridPane>