<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefWidth="748.0" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="edu.bsu.cs222.finalproject.ui.EmployeeEditor">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <Button onAction="#backToSelection" text="Back to Selection" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0" GridPane.rowSpan="1" />
    <Label text="Employee Editor" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1" GridPane.rowSpan="1" />
    <Label fx:id="errorLabel" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4" GridPane.rowSpan="1" />
    <TableView fx:id="dataTable" minWidth="400" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="5" GridPane.rowSpan="1" />
    <TextField fx:id="employeeNameField" promptText="Employee Name" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
    <TextField fx:id="employeeNumberField" promptText="Employee Number" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
    <Button onAction="#newEmployee" text="Add New Employee" GridPane.columnIndex="2" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
    <Button onAction="#removeEmployee" text="Remove Employee" GridPane.columnIndex="3" GridPane.columnSpan="1" GridPane.rowIndex="6" GridPane.rowSpan="1" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
